<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Styled Form</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin-top: 2.5rem !important;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }

    

      .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
      }

      .form-row.full-width {
        flex-direction: column;
        width: 100%;
      }

      label {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 5px;
        color:white;
      }

      input,
      select,
      textarea
       {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
      }

      textarea {
        resize: none;
      }

      #savebtn {
        background-color: rgb(31, 246, 31);
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
      }
      #post2 {
  background-color: #233142;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  width: 780px; 
}

.accessories-container {
  margin-top: 15px;
}

.accessories-label {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
  color: #fff;
}

.accessories-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr); 
  gap: 15px 20px; 
  padding: 10px;

 
}

.accessories-grid .form-group {
  display: flex;
  align-items: center;
  gap: 8px; 

  padding: 8px;

}

.accessories-grid input[type="checkbox"] {
  width: 16px;
  height: 16px;
  cursor: pointer;
}

.accessories-grid label {
  font-size: 14px;
  color: white;
  cursor: pointer;
}

      button:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
  <%- include('navbar') %>
  <%- include('sidebar') %>
   <% if(message){%>
    <script>
      alert("<%= message %>")
    </script>
   <%} %>
    <form action="/admin/vehiclep" method="post"enctype="multipart/form-data"id="post2">
      <!-- Title and Car Brand -->
      <div class="form-row">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" required />
        </div>
        <div class="form-group">
          <label for="car">Car Brand</label>
          <select id="car" name="car">
            <option value="" disabled selected>Select a Brand</option>
            <% data.forEach(item => { %>
            <option value="<%= item.brand_name %>">
              <%= item.brand_name %>
            </option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Over (Full Width) -->
      <div class="form-row full-width">
        <div class="form-group">
          <label for="over">Description</label>
          <textarea id="over" name="over" rows="4" required></textarea>
        </div>
      </div>

      <!-- Price, Fuel, Model Year, Seating -->
      <div class="form-row">
        <div class="form-group">
          <label for="price">Price per Day</label>
          <input
            type="text"
            id="price"
            name="price"
            placeholder="Price per day"
            required
          />
        </div>
        <div class="form-group">
          <label for="fuel">Fuel</label>
          <select id="fuel" name="fuel">
            <option value="" disabled selected>Select fuel type</option>
            <option value="diesel">Diesel</option>
            <option value="petrol">Petrol</option>
            <option value="hybrid">Hybrid</option>
            <option value="electric">electric</option>
          </select>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="carmodel">Model Year</label>
          <input
            type="text"
            id="carmodel"
            name="carmodel"
            placeholder="Model Year"
            required
          />
        </div>
        <div class="form-group">
          <label for="seating">Seating Capacity</label>
          <input
            type="text"
            id="seating"
            name="seating"
            placeholder="Seating Capacity"
            required
          />
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="images">upload images</label>
          <input type="file" name="image" accept="image/*" multiple required />
        </div>
      </div>
 <!-- Accessories Section -->
<div class="form-row full-width">
  <label>Accessories</label>
  <div class="accessories-grid">
    <div class="form-group">
      <input type="checkbox" id="air_conditioner" name="accessories" value="Air Conditioner">
      <label for="air_conditioner">Air Conditioner</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="abs" name="accessories" value="Antilock Braking System">
      <label for="abs">Antilock Braking System</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="power_steering" name="accessories" value="Power Steering">
      <label for="power_steering">Power Steering</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="power_windows" name="accessories" value="Power Windows">
      <label for="power_windows">Power Windows</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="cd_player" name="accessories" value="CD Player">
      <label for="cd_player">CD Player</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="leather_seats" name="accessories" value="Leather Seats">
      <label for="leather_seats">Leather Seats</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="central_locking" name="accessories" value="Central Locking">
      <label for="central_locking">Central Locking</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="power_door_locks" name="accessories" value="Power Door Locks">
      <label for="power_door_locks">Power Door Locks</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="brake_assist" name="accessories" value="Brake Assist">
      <label for="brake_assist">Brake Assist</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="driver_airbag" name="accessories" value="Driver Airbag">
      <label for="driver_airbag">Driver Airbag</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="passenger_airbag" name="accessories" value="Passenger Airbag">
      <label for="passenger_airbag">Passenger Airbag</label>
    </div>
    <div class="form-group">
      <input type="checkbox" id="crash_sensor" name="accessories" value="Crash Sensor">
      <label for="crash_sensor">Crash Sensor</label>
    </div>
  </div>
</div>



       <div class="form-row full-width">
        <button type="submit"id="savebtn">Submit</button>
      </div>
    </form>
  </body>
</html>
