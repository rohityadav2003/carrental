<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      
      table {
        margin-top:6rem !important;
        margin-left: 17rem !important;
        width: 80%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      th,
      td {
        padding: 12px 15px;
        text-align: left;
      }
      th {
        background-color: #4CAF50;
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 0.03em;
      }
      tr:nth-child(even) {
        background-color: #f9f9f9;
      }
      tr:nth-child(odd) {
        background-color: #ffffff;
      }
      tr:hover {
        background-color: #f1f1f1;
      }
      td {
        border-bottom: 1px solid #ddd;
        color: #333;
      }
      th[colspan="2"] {
        text-align: center;
      }
      table caption {
        caption-side: top;
        margin: 10px 0;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;
        color: #333;
      }
    </style>
  </head>
  <body>
   
    <form action="/admin/managevehicl" method="get">
      <label for="search">Search Vehicle:</label>
      <input type="text" id="search" name="search" placeholder="Enter vehicle title" value="<%= searchQuery %>">
      <button type="submit">Search</button>
    </form>
  
    <p>
      <% if (data.length === 0) { %>
        No vehicles found.
      <% } %>
    </p>
    
    <table>
     <caption>vehicles details</caption>
      <tr>
        <th>S.No</th>
        <th>Vehicle Title</th>
        <th>Brand</th>
        <th>Price Per Day</th>
        <th>Fuel Type</th>
        <th>Model Year</th>
        <th colspan="2">Action</th>
      </tr>
      <tbody>
        <% if(data.length > 0) { %>
          <% data.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.title %></td>
              <td><%= item.car %></td>
              <td><%= item.price %></td>
              <td><%= item.fuel %></td>
              <td><%= item.carmodel %></td>
              <td>
                <a href="/admin/editvehicle1/<%= item._id %>" class="edit">Edit</a>
                <a href="/admin/delete1/<%= item._id %>" class="delete"onclick="return confirmdelete()">Delete</a>
            </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
    <script>
      function confirmdelete(){
        return confirm("Do you  want to delete this vehicle?");
      }
    </script>
     </body>
</html>
